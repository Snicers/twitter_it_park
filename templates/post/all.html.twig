{% extends 'base.html.twig' %}

{% block title %}Twitter v2.0!{% endblock %}

{% block body %}
    {% for post in posts %}
        <div class="blog-post">
            <h2 class ="blog-post-title">{{ post.title }}</h2>
            <p class="blog-post-meta">

        {{ post.createdAt|date("d.m.Y h:i:s", "Europe/Moscow")}}
                |<a href="{{ path("user", {"id": post.author.id}) }}">
                    {{ post.author.username }}   </a>

            </p>
            {{ post.text }}
            <a href="{{ path("post", {"id": post.id}) }}">Посмотреть полностью<</a>
        </div>
    {% endfor %}
{% endblock %}

